


{% extends  "default/consult.html.twig"  %}
{% block container %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des contrats</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">

                <thead>
                <tr>
                    <th>ID Contrat</th>
                    <th>ID USER</th>
                    <th> Type Contrat </th>
                    <th> Couverture Assurances </th>
                    <th> Date mise circulation </th>
                    <th> Marque </th>


                    <th> Carte Grise</th>
                    <th> Releve d information</th>


                    <th> Date Debut Contrat </th>
                    <th> Date Fin Contrat </th>
                    <th> Etat </th>


                    <th> Modifier </th>

                </tr>
                </thead>
                <tbody>
                {% for ContratAutomobile in ContratAutomobile %}
                    <tr>
                        <td> {{ ContratAutomobile.idcontratautomobile }}</td>
                        <td> {{ ContratAutomobile.user }}</td>
                        <td> {{ ContratAutomobile.typecontratAuto }}</td>
                        <td> {{ ContratAutomobile.couvertureAssurance|json_encode()}}</td>
                        <td> {{ ContratAutomobile.dateMiseCirculation| date("y/m/d") }}</td>
                        <td> {{ ContratAutomobile.marque }}</td>

                        <td><a href=" {{ path("afficher_image",{'i': ContratAutomobile.CarteGrise} ) }}"><img src="{{ asset('images/') }}{{ ContratAutomobile.CarteGrise }}" style="width: 50px;height: 50px" ></a></td>
                        <td><a href="{{ vich_uploader_asset(ContratAutomobile, 'imageFile' ,'MyApp\\UserBundle\\Entity\\ContratAutomobile' )}}"/>Voir Releve d information</a></td>
                        <td>                         <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            {{ ContratAutomobile.datedebut | date("y/m/d")  }}</td>
                        <td>                         <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            {{ ContratAutomobile.datefin | date("y/m/d")  }}</td>



                        {%  if ContratAutomobile.etat==0 %} <td> <a href=" {{ path("approuver",{'id': ContratAutomobile.idcontratautomobile} ) }}"> <span class="label label-danger">Denied</span>   </a>  </td> {% else %} <td>  <a href=" {{ path("refuser",{'id': ContratAutomobile.idcontratautomobile} ) }}">  <span class="label label-success">Approved</span> </a></td>
                        {% endif %}
                        <td><div class="pull-right box-tools">
                                <button type="button" class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip"
                                        title="Edit">
                                    <i class="fa fa-edit"></i></button>
                            </div></td>


                    </tr>

                {% endfor %}




                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
    </section>
    <!-- /.content -->
    </div>

{% endblock %}