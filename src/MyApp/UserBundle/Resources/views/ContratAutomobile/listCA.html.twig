    <table border="2" bgcolor="aqua">
        <div class="row">
            <div class="col-xs-12" >
                <table id="simple-table" class="table  table-bordered table-hover" >

                    <tr>
                        <th class="hidden-480"> id contrat Automobile  </th>
                        <th class="hidden-480"> user  </th>
                        <th> Type Contrat </th>
                        <th> Couverture Assurances </th>
                        <th> Date mise circulation </th>
                        <th> Marque </th>


                        <th> Carte Grise</th>
                        <th> Releve d information</th>



                        <th> Date Debut Contrat </th>
                        <th> Date Fin Contrat </th>
