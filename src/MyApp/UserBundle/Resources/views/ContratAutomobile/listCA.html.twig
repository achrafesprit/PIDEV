                        <th> Supprimer </th>
                        <th> Modifier </th>



                    </tr>
                    </tr>
                    {% for ContratAutomobile in ContratAutomobile %}
                        <tr>
                            <td> {{ ContratAutomobile.idcontratautomobile }}</td>
                            <td> {{ ContratAutomobile.user }}</td>
                            <td> {{ ContratAutomobile.typecontratAuto }}</td>
                            <td> {{ ContratAutomobile.couvertureAssurance|json_encode()}}</td>
                            <td> {{ ContratAutomobile.dateMiseCirculation| date("y/m/d") }}</td>
                            <td> {{ ContratAutomobile.marque }}</td>


                            <td><a href=" {{ path("afficher_image",{'i': ContratAutomobile.CarteGrise} ) }}"><img src="{{ asset('images/') }}{{ ContratAutomobile.CarteGrise }}" style="width: 50px;height: 50px" ></a></td>
                            <td><a href="{{ vich_uploader_asset(ContratAutomobile, 'imageFile' ,'MyApp\\UserBundle\\Entity\\ContratAutomobile' )}}"/>Voir Releve d information</a></td>
                            <td>                         <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                {{ ContratAutomobile.datedebut | date("y/m/d")  }}</td>
                            <td>                         <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                {{ ContratAutomobile.datefin | date("y/m/d")  }}</td>
                            <td> {{ ContratAutomobile.etat }}</td>


                            <td> <a href=" {{ path("Supprimer_ContratAuto",{'id': ContratAutomobile.idcontratautomobile} ) }}"> Supprimer</a> </td>
                            <td> <a href=" {{ path("Modifier_ContratAuto",{'id': ContratAutomobile.idcontratautomobile} ) }}"> Modifier</a> </td>
                        </tr>










                    {% endfor %}
